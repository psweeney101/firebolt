{
  "ignoreFiles": ["**/*"],
  "overrides": [
    {
      "files": ["**/*.{css,scss}"],
      "extends": ["stylelint-config-idiomatic-order"],
      "rules": {
        "color-hex-length": "long",
        "no-empty-source": null
      }
    },
    {
      "files": ["**/*.css"],
      "extends": ["stylelint-config-standard"],
      "rules": {}
    },
    {
      "files": ["**/*.scss"],
      "extends": ["stylelint-config-standard-scss"],
      "rules": {}
    }
  ],
  "rules": {}
}
